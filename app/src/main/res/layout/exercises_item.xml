<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:id="@+id/exercise_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleEx_tableRow_">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/exercise5" />

        <LinearLayout
            android:id="@+id/tableRow2.5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exercise_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingVertical="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:text="25 Pushups"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_exercise"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_primary"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="15dp"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="50dp" />
        </LinearLayout>
    </LinearLayout>
