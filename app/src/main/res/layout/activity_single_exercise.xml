<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingVertical="10dp"
            android:singleLine="true"
            android:text="Go Back"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:textAlignment="textStart"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:paddingVertical="30dp"
            android:singleLine="true"
            android:text="Cardio"
            android:paddingHorizontal="28dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingVertical="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:text="Complete"
            android:textAlignment="textEnd"
            android:textSize="18dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:gravity="fill_horizontal"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/exercise5" />

        <TableLayout
            android:id="@+id/tableRow21"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:gravity="fill_horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingVertical="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:text="25 Pushups"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_primary"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="15dp"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="50dp" />
        </TableLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:gravity="fill_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/exercise5" />

        <TableLayout
            android:id="@+id/tableRow31"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:gravity="fill_horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingVertical="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:text="50 Situps"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_primary"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="15dp"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="50dp" />
        </TableLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:gravity="fill_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/exercise5" />

        <TableLayout
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:gravity="fill_horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingVertical="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:text="75 Squats"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_primary"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="15dp"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="50dp" />
        </TableLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow41"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:gravity="fill_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow3">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/exercise5" />

        <TableLayout
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:gravity="fill_horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingVertical="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:text="30 Pullups"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal_primary"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="15dp"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="50dp" />
        </TableLayout>
    </TableRow>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>